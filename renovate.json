{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "group:allNonMajor",
        "schedule:weekly",
        ":approveMajorUpdates",
        ":automergeMinor",
        "schedule:weekly",
        ":semanticCommits",
        ":semanticCommitTypeAll(chore)"
    ],
    "labels": [
        "dependencies"
    ],
    "rangeStrategy": "bump",
    "ignoreDeps": [
        "@types/react",
        "@types/react-dom",
        "react",
        "react-dom",
        "next",
        "eslint-config-next"
    ]
}